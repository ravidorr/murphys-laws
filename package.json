{
  "name": "murphys-laws",
  "version": "0.1.0",
  "private": true,
  "description": "Local dev server setup for Murphy's Laws static site",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:clean": "rm -rf node_modules/.vite && npm run dev",
    "build": "vite build",
    "preview": "vite build && vite preview --port 5173",
    "e2e": "playwright test",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "prepare": "husky",
    "postprepare": "node scripts/sanitize-husky-hooks.mjs",
    "db:sql": "node scripts/build-sqlite.mjs > db/import.sql",
    "db:init": "sqlite3 murphys.db < db/schema.sql",
    "db:import": "node scripts/build-sqlite.mjs | sqlite3 murphys.db",
    "db:rebuild": "sqlite3 murphys.db < db/schema.sql && node scripts/build-sqlite.mjs | sqlite3 murphys.db",
    "api": "node scripts/api-server.mjs",
    "review": "node scripts/review-laws.mjs",
    "migrate": "node scripts/migrate.mjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "globals": "^15.15.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^36.0.1",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "mathjax": "^3.2.2",
    "mathjax-full": "^3.2.2"
  }
}
