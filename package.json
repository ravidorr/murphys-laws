{
  "name": "murphys-laws",
  "version": "0.1.0",
  "private": true,
  "description": "Local dev server setup for Murphy's Laws static site",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:bg": "vite > logs/dev-server.log 2>&1 & echo $! > logs/dev-server.pid",
    "dev:clean": "rm -rf node_modules/.vite && npm run dev",
    "build": "vite build",
    "preview": "vite preview --port 5175",
    "preview:build": "vite build && vite preview --port 5173 > logs/preview.log 2>&1 & echo $! > logs/preview.pid",
    "validate-ports": "node scripts/validate-ports.mjs",
    "predeploy": "npm run validate-ports",
    "deploy": "node scripts/deploy.mjs",
    "e2e": "playwright test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "prepare": "husky",
    "postprepare": "node scripts/sanitize-husky-hooks.mjs",
    "db:sql": "node scripts/build-sqlite.mjs > db/import.sql",
    "db:init": "sqlite3 murphys.db < db/schema.sql",
    "db:import": "node scripts/build-sqlite.mjs | sqlite3 murphys.db",
    "db:rebuild": "sqlite3 murphys.db < db/schema.sql && node scripts/build-sqlite.mjs | sqlite3 murphys.db",
    "api": "node scripts/api-server.mjs > logs/api-server.log 2>&1 & echo $! > logs/api-server.pid",
    "api:fg": "node scripts/api-server.mjs",
    "stop": "pkill -f 'node scripts/api-server.mjs' || true; pkill -f 'vite' || true",
    "logs": "tail -f logs/*.log",
    "logs:list": "node scripts/log-manager.mjs list",
    "logs:read": "node scripts/log-manager.mjs read",
    "logs:clear": "node scripts/log-manager.mjs clear",
    "review": "node scripts/review-laws.mjs",
    "migrate": "node scripts/migrate.mjs",
    "migrate:safe": "node scripts/migration-safety-check.mjs && node scripts/migrate.mjs",
    "db:show-updates": "node scripts/show-recent-updates.mjs",
    "db:export-updates": "node scripts/export-law-updates.mjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "globals": "^15.15.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^36.0.1",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "mathjax": "^3.2.2",
    "mathjax-full": "^3.2.2",
    "nodemailer": "^7.0.7"
  }
}
