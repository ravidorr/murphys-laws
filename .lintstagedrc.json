{
  "web/**/*.{js,mjs}": [
    "cd web && eslint --fix"
  ],
  "web/styles/**/*.css": [
    "cd web && stylelint --fix"
  ],
  "web/**/*.html": [
    "cd web && npx html-validate"
  ],
  "backend/**/*.{js,mjs}": [
    "cd backend && eslint --fix"
  ],
  "shared/**/*.{js,mjs}": [
    "eslint --fix || echo 'Linting skipped: shared eslint not configured yet'"
  ]
}