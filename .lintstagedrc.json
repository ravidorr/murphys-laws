{
  "web/**/!(*.test).{js,mjs,ts}": [
    "eslint --config web/eslint.config.ts --fix"
  ],
  "web/**/*.test.{js,ts}": [
    "eslint --config web/eslint.config.test.ts --fix"
  ],
  "web/styles/**/*.css": [
    "stylelint --config web/.stylelintrc.json --fix"
  ],
  "web/**/*.html": [
    "npx html-validate --config web/.htmlvalidate.json"
  ],
  "backend/**/*.{js,mjs}": [
    "eslint --config backend/eslint.config.ts --fix"
  ],
  "shared/**/*.{js,mjs}": [
    "eslint --fix || echo 'Linting skipped: shared eslint not configured yet'"
  ],
  "**/*.md": [
    "markdownlint-cli2 --fix"
  ]
}