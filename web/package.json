{
  "name": "murphys-laws-web",
  "version": "3.0.8",
  "description": "Murphy's Laws Web Application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run ssg",
    "ssg": "tsx scripts/ssg.mjs",
    "preview": "vite preview",
    "preview:build": "npm run build && npm run preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"styles/**/*.css\"",
    "lint:css:fix": "stylelint \"styles/**/*.css\" --fix",
    "lint:html": "html-validate \"**/*.html\"",
    "optimize:images": "node scripts/optimize-images.mjs",
    "optimize:images:dry-run": "node scripts/optimize-images.mjs --dry-run"
  },
  "keywords": [
    "murphys-law",
    "web",
    "frontend"
  ],
  "author": "",
  "license": "CC0-1.0",
  "dependencies": {
    "@sentry/browser": "^10.25.0",
    "jspdf": "^4.0.0",
    "marked": "^17.0.3",
    "mathjax": "^3.2.2",
    "mathjax-full": "^3.2.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^10.0.0",
    "@playwright/test": "^1.58.2",
    "@sentry/vite-plugin": "^4.0.0",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^10.0.0",
    "eslint-plugin-no-emoji": "^2.0.2",
    "globals": "^15.14.0",
    "html-validate": "^10.8.0",
    "jsdom": "^28.0.0",
    "sharp": "^0.34.5",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.0"
  }
}
