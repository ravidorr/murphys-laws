{
  "name": "murphys-laws-web",
  "version": "2.1.1",
  "description": "Murphy's Laws Web Application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run ssg",
    "ssg": "node scripts/ssg.mjs",
    "preview": "vite preview",
    "preview:build": "npm run build && npm run preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"styles/**/*.css\"",
    "lint:css:fix": "stylelint \"styles/**/*.css\" --fix",
    "lint:html": "html-validate \"**/*.html\""
  },
  "keywords": [
    "murphys-law",
    "web",
    "frontend"
  ],
  "author": "",
  "license": "CC0-1.0",
  "dependencies": {
    "marked": "^17.0.0",
    "mathjax": "^3.2.2",
    "mathjax-full": "^3.2.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.54.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "html-validate": "^10.4.0",
    "jsdom": "^26.0.0",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^36.0.1",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  }
}