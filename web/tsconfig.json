{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals"],

    /* Module Resolution */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Type Checking â€” full strict mode */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "skipLibCheck": true,

    /* Interop */
    "esModuleInterop": true,
    "allowJs": false,

    /* Path Aliases (must match vite.config.js) */
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@views/*": ["src/views/*"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["../shared/*"],
      "@playwright/test": ["../node_modules/@playwright/test"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ]
}
