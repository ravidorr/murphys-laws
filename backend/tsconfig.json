{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "lib": ["ES2022"],
    "types": ["node", "vitest/globals"],
    "noEmit": true,
    "allowJs": false,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "scripts/**/*.ts",
    "../shared/modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist"
  ]
}
